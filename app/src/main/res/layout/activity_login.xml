<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raminder.warningsystemforunmannedlevelcrossing.Login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/holiday"
                android:layout_width="100sp"
                android:layout_height="100dp"
                android:gravity="center"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo"
                android:textStyle="bold"
                android:layout_marginTop="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/listViewColor">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/user"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"/>
                    <EditText
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#00000000"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:hint="Username / Email ID"
                        android:textColor="@color/listItemTextColor"
                        android:inputType="text"
                        android:textColorHint="@color/iconColor"
                        android:drawablePadding="10dp"
                        android:textSize="13dp"
                        android:id="@+id/loginUser" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/listViewColor"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/pass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/password"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#00000000"
                        android:paddingLeft="10dp"
                        android:hint="Password"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColorHint="@color/iconColor"
                        android:textColor="@color/listItemTextColor"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:id="@+id/loginPass" />
                </LinearLayout>

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstates"
                    android:textSize="20sp"
                    android:text="Sign In"
                    android:textStyle="bold"
                    android:onClick="login"
                    android:gravity="center"
                    android:textColor="@color/white"

                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                >

                <TextView
                    android:id="@+id/needhelp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/need_help"
                    android:textColor="@color/listItemTextColor"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:gravity="end"/>
                <TextView
                    android:id="@+id/nam"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/not_a_member_signup"
                    android:textColor="@color/listItemTextColor"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:gravity="end"/>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>
